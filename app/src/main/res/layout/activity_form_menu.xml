<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormMenuActivity">

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Form Menu"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <!-- menu Makanan -->
    <TextView
        android:id="@+id/tvMakanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Makanan"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvJudul"/>

    <LinearLayout
        android:id="@+id/laySoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMakanan"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/tvSoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Soto"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/inputJumlahSoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:gravity="center"
            android:inputType="number"/>

        <TextView
            android:id="@+id/tvHargaSoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="20sp"
            android:text="Rp 8.000"
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layTimlo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/laySoto"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/tvTimlo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Timlo"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/inputJumlahTimlo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:gravity="center"
            android:inputType="number"/>

        <TextView
            android:id="@+id/tvHargaTimlo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Rp 10.000"
            android:textSize="20sp"
            android:gravity="end"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvMinuman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minuman"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layTimlo"/>

    <LinearLayout
        android:id="@+id/layEsTeh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMinuman"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/tvEsTeh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Es Teh"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/inputEsTeh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:gravity="center"
            android:inputType="number"/>

        <TextView
            android:id="@+id/tvHargaEsTeh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Rp 3.000"
            android:textSize="20sp"
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layEsJeruk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layEsTeh"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/tvEsJeruk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Es Jeruk"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/inputEsJeruk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:gravity="center"
            android:inputType="number"/>

        <TextView
            android:id="@+id/tvHargaEsJeruk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Rp 4.000"
            android:textSize="20sp"
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layTehPanas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layEsJeruk"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/TehPanas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Teh Panas"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/inputTehPanas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:gravity="center"
            android:inputType="number"/>

        <TextView
            android:id="@+id/tvHargaTehPanas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Rp 2.500"
            android:textSize="20sp"
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layJerukPanas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layTehPanas"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/tvJerukPanas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Jeruk Panas"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/inputJerukPanas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:gravity="center"
            android:inputType="number"/>

        <TextView
            android:id="@+id/tvHargaJerukPanas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Rp 3.000"
            android:textSize="20sp"
            android:gravity="end"/>
    </LinearLayout>

</RelativeLayout>